import React, { Component } from "react";

class Red extends Component {
  constructor(props) {
    super(props);
    this.state = {
      activeColor: "red",
    };
  }

  render() {
    return (
      <div>
        <button
          className="Buttons-Red"
          type="button"
          onClick={() => this.setState({ activeColor: "red" })}
        >
          <h1 className="Content">Apply Red</h1>
        </button>
      </div>
    );
  }
}

export default Red;
